@model IEnumerable<Vidly.Models.Customers>

@{
    ViewBag.Title = "GetCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>

@if (!Model.Any())
{
    <p>We dont have any customer.</p>
}
else
{

    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>

                <th>Membership Type</th>
                <th>Discount Rate</th>
                <th>Edit Customer</th>
                <th>Delete Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td> @Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.ID }, null) </td>
                    <td>@customer.MemberShipType.Name</td>
                    <td>@customer.MemberShipType.DiscountRate</td>
                    <td> @Html.ActionLink("Edit", "EditCustomer", "Customer", new { id = customer.ID }, null) </td>
                    <td><button data-customer-id="@customer.ID" class="btn-link js-delete">Delete</button></td>
                </tr>
            }
        </tbody> 
    </table>
}

